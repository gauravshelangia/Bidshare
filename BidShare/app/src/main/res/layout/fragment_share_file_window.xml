<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurav.bidshare.ShareFileWindow$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:textStyle="bold"
        android:textColor="#4189E1"
        android:textSize="20sp"
        android:text="Selected file" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:id="@+id/file_path"
        android:text="No file has been selected"
        android:textSize="30dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Browse File"
        android:id="@+id/browse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="18dp"
        android:onClick="BrowseFile"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Send "
        android:id="@+id/send"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:onClick="StartServer"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:hint="Enter IP Address from You want to receive"
        android:ems="10"
        android:id="@+id/ipaddress"
        android:layout_below="@+id/bid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Recieve "
        android:id="@+id/receive"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:onClick="Recieve"
        />
</RelativeLayout>
